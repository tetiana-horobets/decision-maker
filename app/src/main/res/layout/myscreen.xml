<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">


    <EditText
        android:id="@+id/inputLine"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="22dp"
        android:hint="Write a word or expression" />


    <Button
        android:id="@+id/buttonPlus"
        style="@style/styleButton"
        android:layout_height="38dp"
        android:layout_width="40dp"
        android:layout_alignBottom="@id/inputLine"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/inputLine"
        android:text="+" />

    <Button
        android:id="@+id/button2"
        style="@style/styleButton"
        android:layout_height="38dp"
        android:layout_width="40dp"
        android:layout_alignBottom="@id/buttonPlus"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/buttonPlus"
        android:text="new list" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="320dp"
        android:layout_below="@id/inputLine"
        android:layout_alignLeft="@id/inputLine"
        android:layout_marginTop="18dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="320dp"
        android:layout_alignRight="@id/button2"
        android:layout_below="@+id/inputLine"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/textView"

        android:text="TextView" />

    <Button
        android:id="@+id/randomizeButton"
        style="@style/styleButton"
        android:layout_height="30dp"
        android:layout_width="wrap_content"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"

        android:text="Random"
        android:layout_alignLeft="@+id/buttonPlus"
        android:layout_alignStart="@+id/buttonPlus"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />


</RelativeLayout>