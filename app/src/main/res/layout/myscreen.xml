<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">


    <EditText
        android:id="@+id/inputLine"
        android:layout_width="280dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="22dp"
        android:hint="Write a word or expression" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="280dp"
        android:layout_height="38dp"
        android:layout_below="@id/inputLine"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        android:text="Name" />

    <Button
        android:id="@+id/buttonPlus"
        style="@style/styleButton"
        android:layout_alignBottom="@id/inputLine"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/inputLine"
        android:text="+" />

    <Button
        android:id="@+id/button2"
        style="@style/styleButton"
        android:layout_alignBottom="@id/editText"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/editText"
        android:text="new list" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="320dp"
        android:layout_below="@id/editText"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="18dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="180dp"
        android:layout_height="320dp"
        android:layout_alignRight="@id/button2"
        android:layout_below="@+id/editText"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/textView"

        android:text="TextView" />

    <Button
        android:id="@+id/randomizeButton"
        style="@style/styleButton"
        android:layout_alignLeft="@id/button2"
        android:layout_alignRight="@id/button2"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"

        android:text="Random" />


</RelativeLayout>