<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewDynamic"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />
    <Button
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:text="X"
        android:id="@+id/buttonDelete"
        android:layout_alignTop="@+id/textViewDynamic"
        android:layout_alignRight="@+id/textViewDynamic"
        android:layout_alignEnd="@+id/textViewDynamic"
        android:layout_alignBottom="@+id/textViewDynamic" />

</RelativeLayout>