<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"  android:background="@color/backgroundColor">
    <EditText
        android:id="@+id/inputLine"
        style="@style/TextStyle"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:hint="Write a word or expression"
        android:layout_toLeftOf="@+id/buttonPlus"
        android:layout_toStartOf="@+id/buttonPlus" />

    <EditText
        android:id="@+id/editText"
        style="@style/TextStyle"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_alignTop="@+id/button2"
        android:layout_above="@+id/textView2"
        android:layout_toLeftOf="@+id/buttonPlus"
        android:layout_alignLeft="@+id/inputLine"
        android:layout_alignStart="@+id/inputLine" />

    <Button
        android:id="@+id/buttonPlus"
        style="@style/styleButton.Horizontal"
        android:text="+"
        android:layout_alignTop="@+id/inputLine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <Button
        android:id="@+id/button2"
        style="@style/styleButton.Horizontal"
        android:layout_marginTop="3dp"
        android:text="new list"
        android:layout_below="@+id/buttonPlus"
        android:layout_alignLeft="@+id/buttonPlus"
        android:layout_alignStart="@+id/buttonPlus"
       />

    <TextView
        android:id="@+id/textView2"
        style="@style/TextStyle"
        android:background="@color/backgroundColorTextView"
        android:layout_width="272dp"
        android:layout_height="155dp"
        android:text="TextView"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:id="@+id/textView"
        style="@style/TextStyle"
        android:background="@color/backgroundColorTextView"
        android:layout_width="272dp"
        android:layout_height="155dp"
        android:text="TextView"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <Button
        android:id="@+id/randomizeButton"
        style="@style/styleButton.Horizontal"
        android:layout_height="38dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignLeft="@+id/button2"
        android:text="Random"
         />
</RelativeLayout>
