<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <EditText
        android:id="@+id/inputLine"
        android:layout_width="270dp"
        android:layout_height="38dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:hint="Write a word or expression"
        android:layout_toLeftOf="@+id/buttonPlus"
        android:layout_toStartOf="@+id/buttonPlus" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="280dp"
        android:layout_height="38dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_alignTop="@+id/button2"
        android:layout_above="@+id/textView2"
        android:layout_toLeftOf="@+id/buttonPlus"
        android:layout_alignLeft="@+id/inputLine"
        android:layout_alignStart="@+id/inputLine" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="+"
        android:layout_alignTop="@+id/inputLine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:text="new list"
        android:layout_below="@+id/buttonPlus"
        android:layout_alignLeft="@+id/buttonPlus"
        android:layout_alignStart="@+id/buttonPlus"
       />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="260dp"
        android:layout_height="160dp"
        android:text="TextView"
        android:layout_below="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="260dp"
        android:layout_height="160dp"
        android:text="TextView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <Button
        android:id="@+id/button3"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:text="Random"
        android:layout_below="@+id/textView2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2"
        />
</RelativeLayout>
